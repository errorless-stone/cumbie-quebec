<%- include('partials/html-head') %>

<style>
    .btn-primary{
      margin-top: 2%;
      background-color: #020f28;
    }

    body{
      background-image: url(https://wallpaperaccess.com/full/400229.jpg) ;
    }

    h1{
      color: #b5e3dc;
    }

    input{
      background-color: #b5e3dc;
      outline-color: #b5e3dc;
      border-style: groove;
    }
</style>

<body class="container-fluid">


<div class="row">
  <div class="col-md-6 col-sm-5 col-lg-5 col-xl-4">
    <h1>Update your Profile Name</h1>

    <%= console.log(profileData) %>
    
    <% for (var i=0; i< profileData.length; i++ ) { %>
      <form method="POST">  
        <input type="hidden" id="devId" name="devId" value="<%= profileData[i]._id %>"></input>
        <input type="text" id="devName" name="devName" value="<%= profileData[i].name %>"></input>
        <button class="btn btn-primary" type="submit" formaction="/updateName">Update Dev Name</button>
        
        <input type="text" id="devHub" name="devHub" value="<%= profileData[i].github %>"></input>
        <button class="btn btn-primary" type="submit" formaction="/updateGithub">Update github </button>
        
        <button class="btn btn-warning" type="submit" formaction="/deleteProfile">Delete Dev </button>
      
      </form>
      <br/>
      <% } %> 
  </div>


  <div class="col-md-6">

  <h1> Add a New Dev Here!</h1>

    <form action="/insertProfile" method="POST">
                
      <input type="text" id="newDevName" name="newDevName" placeholder="New Dev's Name"></input>

      <input type="text" id="newDevHub" name="newDevHub" placeholder="New Dev's Github"></input>

      <button class="btn btn-primary" type="submit">Insert New Dev Name</button>

    </form>

  </div>
</div>


</body>
</html>
